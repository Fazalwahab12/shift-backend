# ===================================
# SECURITY CONFIGURATION
# ===================================

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,exp://192.168.1.100:8081

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Phone registration rate limit (per hour)
PHONE_REGISTER_LIMIT_PER_HOUR=5

# Profile creation rate limit (per hour)
PROFILE_CREATION_LIMIT_PER_HOUR=3

# Search rate limit (per 15 minutes)
SEARCH_LIMIT_PER_15MIN=50

# ===================================
# API CONFIGURATION
# ===================================

# API version
API_VERSION=1.0.0

# Maximum request body size
REQUEST_SIZE_LIMIT=10mb

# JWT Secret (for future authentication implementation)
# JWT_SECRET=your-super-secure-jwt-secret-key

# JWT Expiration
# JWT_EXPIRES_IN=24h

# ===================================
# LOGGING CONFIGURATION
# ===================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Log file path (optional)
# LOG_FILE_PATH=logs/app.log

# ===================================
# DATABASE CONFIGURATION
# ===================================

# Firestore settings
FIRESTORE_IGNORE_UNDEFINED_PROPERTIES=true

# Collection names (if you want to customize)
# USERS_COLLECTION=users
# SEEKERS_COLLECTION=seekers
# COMPANIES_COLLECTION=companies
# ONBOARDING_COLLECTION=onboarding_data

# ===================================
# FILE UPLOAD CONFIGURATION
# ===================================

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file types for profile photos
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Allowed file types for documents
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ===================================
# EMAIL CONFIGURATION (for future use)
# ===================================

# SMTP settings (for email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Email templates
# EMAIL_FROM=noreply@shift-oman.com
# EMAIL_REPLY_TO=support@shift-oman.com

# ===================================
# NOTIFICATION CONFIGURATION (for future use)
# ===================================

# Firebase Cloud Messaging
# FCM_SERVER_KEY=your-fcm-server-key

# Push notification settings
# ENABLE_PUSH_NOTIFICATIONS=true

# ===================================
# ANALYTICS CONFIGURATION (for future use)
# ===================================

# Google Analytics
# GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===================================
# FEATURE FLAGS
# ===================================

# Enable specific features
ENABLE_PHONE_VERIFICATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_COMPANY_VERIFICATION=true
ENABLE_FILE_UPLOADS=true
ENABLE_SEARCH_ANALYTICS=true

# Enable experimental features
ENABLE_AI_MATCHING=false
ENABLE_VIDEO_INTERVIEWS=false
ENABLE_SKILLS_ASSESSMENT=false

# ===================================
# DEVELOPMENT CONFIGURATION
# ===================================

# Enable debug mode
DEBUG_MODE=false

# Enable API documentation
ENABLE_API_DOCS=true

# Enable test endpoints
ENABLE_TEST_ENDPOINTS=false

# Mock external services (for testing)
MOCK_FIREBASE=false
MOCK_EMAIL=true
MOCK_SMS=true

# ===================================
# PRODUCTION CONFIGURATION
# ===================================

# SSL/HTTPS settings
# ENABLE_HTTPS=true
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# Cluster mode (number of processes)
# CLUSTER_WORKERS=auto

# Health check interval (in milliseconds)
HEALTH_CHECK_INTERVAL=30000

# ===================================
# MONITORING CONFIGURATION
# ===================================

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Request timeout (in milliseconds)
REQUEST_TIMEOUT=30000

# Database connection timeout
DATABASE_TIMEOUT=10000

# Cache settings (for future implementation)
# ENABLE_REDIS_CACHE=false
# REDIS_URL=redis://localhost:6379

# ===================================
# LOCALIZATION
# ===================================

# Default language
DEFAULT_LANGUAGE=en

# Supported languages
SUPPORTED_LANGUAGES=en,ar

# Timezone
DEFAULT_TIMEZONE=Asia/Muscat

# Currency
DEFAULT_CURRENCY=OMR

# ===================================
# BUSINESS CONFIGURATION
# ===================================

# Oman-specific settings
DEFAULT_COUNTRY_CODE=+968
SUPPORTED_GOVERNORATES=Muscat,Dhofar,Al Batinah North,Al Batinah South,Musandam,Al Buraimi,Ad Dakhiliyah,Ad Dhahirah,Ash Sharqiyah North,Ash Sharqiyah South,Al Wusta

# Profile completion requirements
MIN_SEEKER_PROFILE_COMPLETION=75
MIN_COMPANY_PROFILE_COMPLETION=80

# Search limits
MAX_SEARCH_RESULTS=100
DEFAULT_SEARCH_LIMIT=20

# File upload limits
MAX_PROFILE_PHOTOS_PER_USER=5
MAX_COMPANY_PHOTOS_PER_COMPANY=10
MAX_DOCUMENTS_PER_USER=5